pkgname=comm-mate
pkgdesc="Meta package for Mate"
pkgver=$(date +%Y%m%d)
pkgrel=$(date +%H%M)
arch=('any')
license=('MIT')
url="https://github.com/communitybig/${pkgname}"
source=("git+${url}.git")
md5sums=('SKIP')
depends=(
  mate-desktop
  mate-session-manager
)

